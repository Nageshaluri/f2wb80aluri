extends layout

block content
  h1= title
  p Rows = #{query.rows} and Columns =  #{query.cols}
  - var rows = Number(query.rows)
  - var cols = Number(query.cols)
  - if(!Number.isInteger(rows)){
      p Given row data is not an integer
  - }
  - else if(!Number.isInteger(Number(cols))){
      p Given column data is not an integer
  - }
  - else if (!(rows >= 1 && rows <= 10)) {
      p Given row range should be in 1 to 10
  - }
  - else if (!(cols >= 1 && cols <= 10)) {
      p Given column range should be in 1 to 10
  - }
  - else {
        table#outer
            - for(let k= 0; k < rows; k++) {
                tr#middle
                   - for(let l=0; l < cols; l++) {
                        td= (1+k+l*rows)
                   - }
            - }
  - }

